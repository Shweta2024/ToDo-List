<!DOCTYPE html>
<html>

    <head>
        <meta charset="utf-8">
        <title>ToDo List</title>
        <link rel="stylesheet" href="css/styles.css">
    </head>

    <body>
        <div class="box" id="heading">
            <h1><%=title%></h1>
        </div>

        <div class="box">

            <!--delete an item-->
            <%tasks.forEach(function(task){%>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="deleteItem" value="<%=task._id%>" onchange="this.form.submit()">
                    <p><%=task.name%></p>
                </div>
                <input type="hidden" name="listName" value="<%=title%>"></input>
            </form>
            <%})%>

            <!--insert a new item-->
            <form class="item" action="/" method="post">
                <input type="text" name="newTask" palceholder="New Task" autocomplete="off">
                <button type="submit" name="button" value=<%=title%>>+</button>
            </form>
        </div>


    </body>
    <footer>
        @bhagat_shweta
    </footer>

</html>